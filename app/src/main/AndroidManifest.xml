<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lowbottgames.au.sydney.traffic.cam">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_trafficcamsydney"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_trafficcamsydney_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:installLocation="auto">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CamItemsActivity" />
        <activity android:name=".CamItemActivity" />
        <activity android:name=".SettingsActivity" />
    </application>

</manifest>